[Unit]
Description=KMonad keyboard remapping (%i)
Documentation=https://github.com/kmonad/kmonad
PartOf=graphical-session.target
After=graphical-session.target

[Service]
Type=simple
ExecStart=/usr/bin/kmonad %h/.config/kmonad/%i.kbd
Restart=on-failure
RestartSec=1

[Install]
WantedBy=default.target
