@import "./theme/rose-pine.css";

* {
  all: unset;
  font-family: Ubuntu Nerd Font;
  transition: 0.3s;
  font-size: 1rem;
}

.floating-notifications.background .notification-row {
  border-radius: 0;
  margin: 4px;
}

.floating-notifications.background .notification-row .notification-background {
  border-radius: 0;
  background-color: @base;
  color: @text;
  border: 1px solid @muted;
}

.floating-notifications.background
  .notification-row
  .notification-background
  .notification {
  border-radius: 0;
  padding: 4px;
}

.floating-notifications.background
  .notification-row
  .notification-background
  .notification.critical {
  border: 1px solid @love;
}

.floating-notifications.background
  .notification-row
  .notification-background
  .notification
  .notification-content
  .summary {
  color: @text;
  font-weight: bold;
  margin: 0 0 4px 8px;
}

.floating-notifications.background
  .notification-row
  .notification-background
  .notification
  .notification-content
  .body {
  color: @subtle;
  margin: 0 0 0 8px;
}

.floating-notifications.background
  .notification-row
  .notification-background
  .notification
  > *:last-child
  > * {
  min-height: 3rem;
}

.floating-notifications.background
  .notification-row
  .notification-background
  .notification
  > *:last-child
  > *
  .notification-action {
  color: @base;
  background-color: @pine;
  padding: 2px 0;
  margin-top: 8px;
}

.floating-notifications.background
  .notification-row
  .notification-background
  .notification
  > *:last-child
  > *
  .notification-action:hover {
  background-color: @overlay;
}

.floating-notifications.background
  .notification-row
  .notification-background
  .notification
  > *:last-child
  > *
  .notification-action:active {
  background-color: @muted;
}

.floating-notifications.background
  .notification-row
  .notification-background
  .close-button {
  border-radius: 0;
  color: @text;
  background-color: @love;
  margin: 4px;
}

.floating-notifications.background
  .notification-row
  .notification-background
  .close-button:hover {
  color: @base;
}

.floating-notifications.background
  .notification-row
  .notification-background
  .close-button:active {
  background-color: @rose;
}

.control-center {
  border-radius: 0.5rem;
  margin: 0.5rem;
  background-color: @base;
  color: @text;
  padding: 1rem 1rem 0 1rem;
  border: 1px solid @muted;
}

.control-center .widget-title {
  color: @rose;
  font-weight: bold;
}

.control-center .widget-title button {
  border-radius: 0.5rem;
  color: @text;
  background-color: @base;
  border: 1px solid @muted;
  padding: 0.5rem;
}

.control-center .widget-title button:hover {
  background-color: @overlay;
}

.control-center .widget-title button:active {
  background-color: @muted;
}

/* NOTE:*/
.control-center .notification-row .notification-background {
  background-color: @base;
  color: @text;
  border: 1px solid @muted;
}

.control-center .notification-row .notification-background .notification {
  padding: 0 8px 0 0;
}

.control-center
  .notification-row
  .notification-background
  .notification.critical {
  border: 1px solid @love;
}

.control-center
  .notification-row
  .notification-background
  .notification
  .notification-content {
  color: @text;
}

.control-center
  .notification-row
  .notification-background
  .notification
  .notification-content
  .summary {
  margin: 0 0 4px 8px;
  color: @text;
  font-weight: bold;
}

.control-center
  .notification-row
  .notification-background
  .notification
  .notification-content
  .body {
  margin: 0 0 0 8px;
  color: @subtle;
}

.control-center
  .notification-row
  .notification-background
  .notification
  > *:last-child
  > * {
  min-height: 3rem;
}

.control-center
  .notification-row
  .notification-background
  .notification
  > *:last-child
  > *
  .notification-action {
  color: @text;
  background-color: @surface;
  border: 1px solid @muted;
}

.control-center
  .notification-row
  .notification-background
  .notification
  > *:last-child
  > *
  .notification-action:hover {
  background-color: @overlay;
}

.control-center
  .notification-row
  .notification-background
  .notification
  > *:last-child
  > *
  .notification-action:active {
  background-color: @overlay;
}

.control-center .notification-row .notification-background .close-button {
  margin: 4px;
  color: @text;
  background-color: @love;
}

.control-center .notification-row .notification-background .close-button:hover {
  color: @base;
}

.control-center
  .notification-row
  .notification-background
  .close-button:active {
  background-color: @rose;
}

progressbar,
progress,
trough {
  border-radius: 0.5rem;
}

.notification.critical progress {
  background-color: @love;
}

.notification.low progress,
.notification.normal progress {
  background-color: @foam;
}

trough {
  background-color: @surface;
}

.control-center trough {
  background-color: @muted;
}

.control-center-dnd {
  margin: 0.5rem 0;
  border-radius: 0.5rem;
}

.control-center-dnd slider {
  background: @overlay;
  border-radius: 0.5rem;
}

.widget-dnd {
  color: @text;
}

.widget-dnd > switch {
  border-radius: 0.5rem;
  background: @overlay;
  border: 1px solid @muted;
}

.widget-dnd > switch:checked slider {
  background: @pine;
}

.widget-dnd > switch slider {
  background: @muted;
  border-radius: 0.5rem;
  margin: 0.25rem;
}

.widget-buttons-grid {
  padding: 6px 2px;
  border-radius: 4px;
  background: @overlay;
  margin: 0 0 0.75rem 0;
}

.widget-buttons-grid > flowbox > flowboxchild > button {
  margin: 4px 10px;
  padding: 6px 12px;
  background: transparent;
  border-radius: 8px;
}

