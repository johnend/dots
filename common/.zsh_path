# ————————————————————————————————————————————————
# Core paths (in this order of priority)
# ————————————————————————————————————————————————

# 1) Your personal ~/bin (for custom scripts like qvim)
export PATH="$HOME/bin:$PATH"

# 2) Your local installs
export PATH="$PATH:$HOME/.local/bin"
export PATH="$PATH:$HOME/.npm-global/bin"
export PATH="$PATH:$HOME/.cargo/bin"

# 3) Ensure basic system paths exist (Linux fallback - macOS handles via /etc/zprofile)
# Only add if not already in PATH (idempotent)
if [[ "$OSTYPE" == "linux-gnu"* ]]; then
  [[ ":$PATH:" != *":/usr/local/bin:"* ]] && export PATH="$PATH:/usr/local/bin"
  [[ ":$PATH:" != *":/usr/bin:"* ]] && export PATH="$PATH:/usr/bin"
  [[ ":$PATH:" != *":/bin:"* ]] && export PATH="$PATH:/bin"
  [[ ":$PATH:" != *":/usr/sbin:"* ]] && export PATH="$PATH:/usr/sbin"
  [[ ":$PATH:" != *":/sbin:"* ]] && export PATH="$PATH:/sbin"
fi

# ————————————————————————————————————————————————
# macOS-only
# ————————————————————————————————————————————————
if [[ "$OSTYPE" == "darwin"* ]]; then
  export PATH="$PATH:$HOME/Library/Application Support/JetBrains/Toolbox/scripts"
  export PATH="$PATH:$HOME/Library/Python/3.9/bin"
  export PATH="$PATH:$HOME/.rd/bin"   # Rancher Desktop
  export PATH="$HOME/.codeium/windsurf/bin:$PATH"
fi

# ————————————————————————————————————————————————
# Linux-only
# ————————————————————————————————————————————————
if [[ "$OSTYPE" == "linux-gnu"* ]]; then
  export PATH="$PATH:$HOME/.local/share/gem/ruby/3.0.0/bin"
  export PATH="/home/johne/.cache/.bun/bin:$PATH"
fi

# ————————————————————————————————————————————————
# Language/toolchain-specific
# ————————————————————————————————————————————————
export PATH="$PATH:$HOME/.bun/bin"

# Go (Linux needs explicit path, macOS gets it from /etc/paths.d/go)
if [[ "$OSTYPE" == "linux-gnu"* ]] && [[ -d "/usr/local/go/bin" ]]; then
  [[ ":$PATH:" != *":/usr/local/go/bin:"* ]] && export PATH="$PATH:/usr/local/go/bin"
fi

# Homebrew-or-Linuxbrew Python (put this right at the front if it exists)
if command -v brew &>/dev/null; then
  PYTHON_BIN="$(brew --prefix)/opt/python/libexec/bin"
  export PATH="$PYTHON_BIN:$PATH"
fi

